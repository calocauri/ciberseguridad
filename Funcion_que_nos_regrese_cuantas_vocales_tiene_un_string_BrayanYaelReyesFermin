// En online C compiler, sí funciona el codigo, pero no puedo en Visual Studio
#include <stdio.h>
#include <ctype.h>

int cv(const char *s)
{
    const char *p;
    char c;
    int v = 0;
    if (s == NULL) return 0;
    for (p = s; *p != '\0'; p++) {
        c = (char) tolower((unsigned char)*p);
        if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') {
            v++;
        }
    }
    return v;
}

int main(void)
{
    char s[1024];
    int v;

    printf("Escribe una palabra: ");
    if (scanf("%1023s", s) != 1) {
        printf("No se leyó ninguna palabra\n");
        return 1;
    }

    v = cv(s);
    printf("Vocales: %d\n", v);
    return 0;
}